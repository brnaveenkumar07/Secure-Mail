

# Database Connection
# Replace username, password with your PostgreSQL credentials
DATABASE_URL="postgresql://postgres:YOUR_PASSWORD@localhost:5432/secure_messaging_db?schema=public"

# JWT Authentication
# IMPORTANT: Change this to a strong random string in production!
# Generate one: openssl rand -base64 32
JWT_SECRET="secure-messaging-app-jwt-secret-key-2025-change-in-production"
JWT_EXPIRES_IN="7d"

# Bcrypt Password Hashing
# Higher = more secure but slower (10 is standard)
BCRYPT_ROUNDS=10

# Server Configuration
PORT=5000
NODE_ENV=development

